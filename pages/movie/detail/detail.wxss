/* 预告片 */
.detail-trailer{
	width: 100%;
	margin: 10rpx 0;
}
.detail-trailer-title{
	font-size: 30rpx;
	line-height: 42rpx;
	color: #399;
}
.detail-trailer-swiper{
	width: 100%;
}
.detail-trailer-item{
	width: 100%;
	display: flex;
	flex-direction: column;
}
.detail-trailer-img{
	display: block;
	width: 100%;
}
.detail-trailer-video{
	width: 100%;
}
.detail-trailer-text{
	font-size: 22rpx;
