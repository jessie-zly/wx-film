/* pages/movie/detail/detail.wxss */
.container{
	width: 100%;
	height: 100%;
	padding: 0 50rpx;
}

/* 信息 */
.detail-info{
	width: 100%;
	margin: 10rpx 0;
	display: flex;
	justify-content: space-between;
}
.detail-info-image{
	display: block;
	width: 200rpx;
	height: 294rpx;
}
.detail-info-text{
	display: flex;
	flex-direction: column;
	align-items: stretch;
	text-align: left;
	font-size: 28rpx;
	color: #4a4a4a;
	line-height: 30rpx;
	width: 400rpx;
}
.detail-info-title{
	width: 100%;
	font-size: 40rpx;
	line-height: 50rpx;
	color: #399;
	margin: 10rpx 0;
}
.detail-info-genres{
	width: 100%;
	margin: 10rpx 0;
	display: flex;
	justify-content: flex-start;
}
.detail-info-genres-text{
	border: 1rpx solid #ccc;
	padding: 5rpx 10rpx;
	margin-right: 10rpx;
}
.detail-info-durations{
	width: 100%;
	margin: 10rpx 0;
}
.detail-info-pubdates{
	width: 100%;
	margin: 10rpx 0;
}
.detail-info-rating{
	width: 100%;
	margin: 10rpx 0;
	border: 1rpx solid #ccc;
	padding: 5rpx 10rpx;
}

/* 简介 */
.detail-summary{
	width: 100%;
	margin: 10rpx 0;
	display: flex;
	flex-direction: column;
}
.detail-summary-title{
	width: 100%;
	font-size: 30rpx;
	line-height: 42rpx;
	color: #399;
}
.detail-summary-body{
	width: 100%;
	font-size: 22rpx;
	line-height: 30rpx;
	color: #4a4a4a;
	margin-top: 10rpx;
	text-indent: 2em;
}
.detail-summary-toggle{
	width: 100%;
	font-size: 30rpx;
	line-height: 42rpx;
	color: #399;
	margin-top: 10rpx;
}

/* 主演 */
.detail-cast{
	width: 100%;
	margin: 10rpx 0;
}
.detail-cast-title{
	font-size: 30rpx;
	line-height: 42rpx;
	color: #399;
}
.detail-cast-body{
	width: 100%;
	margin-top: 10rpx;
	overflow: hidden;
	white-space: nowrap;
}
.detail-cast-scroll{
	width: 100%;
}
.detail-cast-wrap{
	margin-right: 10rpx;
  width: 140rpx;
	display: inline-block;
}
.detail-cast-item{
	display: flex;
	flex-direction: column;
	align-items: center;
}
.detail-cast-pic{
	width: 100%;
	height: 200rpx;
	display: block;
}
.detail-cast-name{
	width: 100%;
	font-size: 22rpx;
	color: #4a4a4a;
	text-align: center;
	word-break:keep-all;
	white-space:nowrap;
	overflow:hidden;
	text-overflow:ellipsis;
}

